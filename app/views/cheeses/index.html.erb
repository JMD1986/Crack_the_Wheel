<h1>Listing Cheeses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Family</th>
      <th>Maker</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheeses.each do |cheese| %>
      <tr>
        <td><%= link_to cheese.name, cheese %></td>
        <td><%= cheese.family %></td>
        <td><%= cheese.farm_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container">
  <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-3"><% @cheeses.each do |cheese| %>
        <%= image_tag cheese.image.url(:medium) %>
        <%= link_to cheese.name, cheese %>
        <%= cheese.family %>
        <%= cheese.farm_id %>
        <% end %>
      </div>
      <div class="col-md-2"></div>

  </div>
</div>
