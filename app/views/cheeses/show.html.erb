
  <div class="row cheese_show_page_background">
    <div class="cheese_show_page_background">
      <div class="col-md-12">
        <div class="cheese_show_page_background">
          <div style="background-image: url(<%= @cheese.image.url(:large) %>); background-repeat: no-repeat; background-size: cover; background-position: center center; height: 350px; z-index: -1; position: absolute; top: 0px; left:0px; width: 100%;">
          <div class="subtitle_text"><%= link_to @cheese.farm.name, @cheese.farm %></div>
          <div class="title_text"><%= @cheese.name %></div>
        </div>
      </div>
    </div>
  <div class="row">
    <div class="col-md-12">
      <div class="row cheese_show_page_rating">
        <strong>Average Rating</strong>
        <% @cheese.average_rating.times do %>
        <%=image_tag("ctw-cheese-slice.png", class: "ratings_slice") %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row cheese_show_page_info">
    <div class="col-md-3 col-md-offset-1">
      <%= display_cheese_type_icon %>
      <%= @cheese.family %>
    </div>
    <div class="col-md-3">
      <strong>Age:</strong>
      <%= @cheese.age %>
    </div>
    <div class="col-me-3">
      <strong>Milk:</strong>
      <%= @cheese.milk %>
    </div>
  </div>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel"><%= current_user.first_name %>s thoughts on <%= @cheese.name %></h4>
        </div>
        <div class="modal-body">
          <%= render '/reviews/form' %>
        </div>
      </div>
    </div>
  </div>


  <div class="row cheese_show_page_reviews">
    <div class="col-md-12">
      <div class="all_reviews">
        <div class="subtitle_text">Reviews</div>
          <div class="row">
            <% if @reviews.exists? %>
              <% @reviews.each do |review| %>
              <div class="col-md-6 cheese_show_page_review_blocks" >
                  <div class="col-md-3"><%= image_tag review.image.url(:thumb) %>
                  </div>
                  <div class="col-md-9 cheese_show_page_review_title"><%= link_to review.title, review %>
                  </div>
                  <p><%= truncate(review.commentary, length: 100) %></p>

                  <h5>Rating</h5>
                  <% (review.wheel).times do %>
                    <%=image_tag("ctw-cheese-slice.png", class: "ratings_slice") %>
                <% end %>
              </div>
            <% end %>
            <% else %>
              no reviews available
            <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row cheese_show_page_button_area">
    <div class="col-md-12">
      <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal">
        Review This Cheese
      </button>
    </div>
  </div>
