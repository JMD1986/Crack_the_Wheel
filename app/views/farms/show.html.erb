<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<div class="container farm_show_page">
  <div class="row">
    <div class="col-md-6">
      <div class="title_text"><%= @farm.name %></div>
      <%= image_tag("farm.png") %>
      <p>
        <strong>Location:</strong>
        <%= @farm.location %>
      </p>
        <strong>Bio:</strong>
        <%= @farm.bio %>
      </p>
    </div>
    <div class="col-md-6">
      <div class="subtitle_text"> This farm has <strong><%= @cheese.count %></strong> Cheeses in our system:</div>
        <div class="row">
          <div class="col-md-12">
            <div class="row"><% if @cheese.count == 0 %>
              This Farm has no cheese in the system yet! <%= link_to "Make One!", new_cheese_path(farm_id: @farm.id) %> <% end %>
            <% @cheese.each do |cheese| %>
            <div class="col-md-6"><%= link_to cheese.name, cheese %>

            </div>
            <div class="col-md-6">
              <!-- FIX THIS!!!! -->
              <% if cheese.average_rating.times == 0 %>
                  unrated
                <% else %>
              <% cheese.average_rating.times do %>
              <%=image_tag("ctw-cheese-slice.png", size:"15px", class: "ratings_slice") %>
                <% end %>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
